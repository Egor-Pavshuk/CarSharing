@model WebCarSharing2.Models.Rents.RentView

@{
    ViewBag.Title = "Close rent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Close your rent</h2>
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="offer">
            <div class="image-container">
                <img src="@ViewBag.Offer.Image" class="offer-image">
            </div>
            <div class="desc-container">
                <div class="offer-model">
                    @ViewBag.Offer.Model
                </div>
                <div class="offer-type">
                    Type: @ViewBag.Offer.Type
                </div>
                <div class="offer-year">
                    Year: @ViewBag.Offer.Year
                </div>
                <div class="offer-price">
                    Daily cost: @ViewBag.Offer.DailyCost &#36;
                </div>
                <div class="offer-description">
                    Description: @ViewBag.Offer.Description
                </div>
            </div>
        </div>
        
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.HiddenFor(model => model.OfferId)
        <div class="form-group" style="clear: both;">
            <hr/>
            @Html.LabelFor(model => model.CustomerEmail, "Enter your e-mail to close your rent:", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerEmail, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.CustomerEmail, "", new {@class = "text-danger"})
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Close" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Home", null, new { @class = "btn btn-default" })
</div>
